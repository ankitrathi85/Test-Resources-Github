{
  "name": "test-automation-resources",
  "version": "1.0.0",
  "description": "A comprehensive staged scanner and website generator for test automation resources on GitHub with progressive data collection",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "scan": "node src/scanner.js",
    "staged-scan": "node src/staged-scanner.js",
    "generate": "node src/generator.js",
    "staged-generate": "node src/staged-generator.js",
    "build": "npm run scan && npm run generate",
    "staged-build": "npm run staged-scan && npm run staged-generate",
    "dev": "npm run build && http-server dist -p 8080",
    "dev-staged": "npm run staged-generate && http-server dist -p 8080",
    "test": "node test.js",
    "lint": "eslint src/**/*.js"
  },
  "keywords": [
    "test-automation",
    "github",
    "selenium",
    "playwright",
    "cypress",
    "testing"
  ],
  "author": "Test Automation Resource Scanner",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "moment": "^2.29.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
